        <!--form crear aparato -->
      <div class="container mt-4">
        <div class="card border-secundary">
            <div class="card-header">Nuevo aparato</div>
            <div class="card-body">
                <form class="mt-4" action="/save_aparato" method="POST">
                    <div class="mb-3">
                        <label for="user" class="form-label">Nombre: </label>
                        <input type="text" class="form-control" id="Nombre" name="Nombre" tabindex="1"  onkeyup = "mayus(this);">
                    </div>

                    <div class="mb-3">
                        <label for="user" class="form-label">Apellido(s): </label>
                        <input type="text" onkeyup = "mayus(this);" class="form-control text-uppercase" id="Apellido" name="Apellido" tabindex="2">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Alias: </label>
                        <input type="text" class="form-control text-uppercase" id="Alias" name="Alias" tabindex="3"  onkeyup = "mayus(this);">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Tel√©fono: </label>
                        <input type="text" class="form-control text-uppercase" id="Telefono" name="Telefono" tabindex="4"  onkeyup = "mayus(this);"> 
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Fecha: </label>
                        <input type="date" class="form-control text-uppercase" id="Fecha" name="Fecha" tabindex="5"  onkeyup = "mayus(this);">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Aparato: </label>
                        <input type="text" class="form-control text-uppercase" id="Aparato" name="Aparato" tabindex="6"  onkeyup = "mayus(this);">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Marca: </label>
                        <input type="text" class="form-control text-uppercase" id="Marca" name="Marca" tabindex="7"  onkeyup = "mayus(this);">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Falla: </label>
                        <input type="text" class="form-control text-uppercase" id="Falla" name="Falla" tabindex="8"  onkeyup = "mayus(this);">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Observaciones: </label>
                        <input type="text" class="form-control text-uppercase" id="Observaciones" name="Observaciones" tabindex="9"  onkeyup = "mayus(this);">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Estado: </label>
                        <select  id="Estado" name="Estado" class="form-select" tabindex="10">
                            <option value="En proceso">En proceso</option>
                            <option value="Listo">Listo</option>
                            <option value="Detenido">Detenido</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Notas: </label>
                        <input type="text" class="form-control text-uppercase" id="Notas" name="Notas" tabindex="9"  onkeyup = "mayus(this);">
                    </div>

                    <button type="submit" class="btn btn-success btn-gradient" tabindex="3">Guardar</button>
                    <a href="/registro_aparatos" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>

    <script>
            function mayus(e) {
            e.value = e.value.toUpperCase();
         }
    </script>


  </body>
</html>