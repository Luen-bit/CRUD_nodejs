  <% if(aparato){ %>
    <div class="container mt-4">
      <div class="card border-secundary">
          <div class="card-header">Editar aparato</div>
          <div class="card-body">
              <form class="mt-4" action="/update_aparato" method="POST">
                <input id="id_cliente" name="id_cliente" value="<%= aparato.id_cliente %>" hidden>
                  <div class="mb-3">
                      <label for="aparato" class="form-label">Nombre: </label>
                      <input type="text" value =" <%= aparato.nombre_cliente %>" class="form-control" id="Nombre" name="Nombre" tabindex="1"  onkeyup = "mayus(this);">
                  </div>

                  <div class="mb-3">
                      <label for="user" class="form-label">Apellido(s): </label>
                      <input type="text" value =" <%= aparato.apellido_cliente %>" onkeyup = "mayus(this);" class="form-control text-uppercase" id="Apellido" name="Apellido" tabindex="2">
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Alias: </label>
                      <input type="text"  value =" <%= aparato.alias %>" class="form-control text-uppercase" id="Alias" name="Alias" tabindex="3"  onkeyup = "mayus(this);">
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Tel√©fono: </label>
                      <input type="text"  value =" <%= aparato.telefono_cliente %>" class="form-control text-uppercase" id="Telefono" name="Telefono" tabindex="4"  onkeyup = "mayus(this);"> 
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Fecha: </label>
                      <input type="text"  value ="<%= aparato.fecha_recepcion %>" class="form-control text-uppercase" id="Fecha" name="Fecha" tabindex="5"  onkeyup = "mayus(this);">
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Aparato: </label>
                      <input type="text"  value =" <%= aparato.aparato %>" class="form-control text-uppercase" id="Aparato" name="Aparato" tabindex="6"  onkeyup = "mayus(this);">
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Marca: </label>
                      <input type="text"   value =" <%= aparato.marca %>" class="form-control text-uppercase" id="Marca" name="Marca" tabindex="7"  onkeyup = "mayus(this);">
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Falla: </label>
                      <input type="text"  value =" <%= aparato.falla %>" class="form-control text-uppercase" id="Falla" name="Falla" tabindex="8"  onkeyup = "mayus(this);">
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Observaciones: </label>
                      <input type="text"  value =" <%= aparato.observaciones %>" class="form-control text-uppercase" id="Observaciones" name="Observaciones" tabindex="9"  onkeyup = "mayus(this);">
                  </div>
                  <div class="mb-3">
                      <label for="aparato" class="form-label">Estado: </label>
                      <select  id="Estado" name="Estado" class="form-select" tabindex="10">
                          <option <%= aparato.estado=='En proceso' ? 'selected': '' %> value="En proceso">En proceso</option>
                          <option <%= aparato.estado=='Listo' ? 'selected': '' %> value="Listo">Listo</option>
                          <option <%= aparato.estado=='Detenido' ? 'selected': '' %> value="Detenido">Detenido</option>
                      </select>
                  </div>
                  <div class="mb-3">
                      <label for="user" class="form-label">Notas: </label>
                      <input type="text"  value =" <%= aparato.notas %>"class="form-control text-uppercase" id="Notas" name="Notas" tabindex="9"  onkeyup = "mayus(this);">
                  </div>

                  <button type="submit" class="btn btn-success btn-gradient" tabindex="3">Actualizar <i class='bx bxs-user-check' ></i></button>
                  <a href="/registro_aparatos" class="btn btn-secondary">Cancelar <i class='bx bxs-user-x' ></i></a>
              </form>
          </div>
      </div>

  </div>
    <% } %>
